{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "version": "1.0.0",
  "description": "Track time spent on websites and get notified when daily limits are reached",
  "permissions": [
    "storage",
    "tabs",
    "idle",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

